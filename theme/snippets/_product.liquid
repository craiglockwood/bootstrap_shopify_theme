{% include '__product-image' %}
<div class="{% include '__product-css-class' %}
						{% if settings.masonry-style-layout %}
							masonry
						{% endif %} product-list-item" 
		 {% include '__product-data-attr' with _product %}>
  <div>
    <div class="thumbnail">
      <div class="thumbnail-image">
        {{ image }}
      </div>
      <div class="caption clearfix">
        <h4>{{ _product.title | link_to: product_url }}</h4>
        {% if has_prices and _product.price > 0 %}
  	      <div class="text-{% if settings.centered-layout %}center{% else %}right{% endif %}">
            {% comment %}<span class="shopify-product-reviews-badge" data-id="{{ _product.id }}"></span>{% endcomment %}
  	      	{% include 'product-thumb-price' with _product %}
  	      </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

